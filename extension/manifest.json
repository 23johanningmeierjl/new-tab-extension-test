{
  "manifest_version": 3,

  "name": "My New Tab",
  "description": "Minimal, RAM-hogging, Time and Date in the New Tab",
  "browser_action": {
    "default_icon": "https://api.iconify.design/material-symbols:auto-timer-rounded.svg"
  },
  "icons": {
      "48": "https://api.iconify.design/material-symbols:auto-timer-rounded.svg",
      "128": "https://api.iconify.design/material-symbols:auto-timer-rounded.svg"
  },
  "version": "2.0",
  "chrome_url_overrides" : {
    "newtab": "index.html"
  },

  "permissions": [
    "storage"
  ],

 "background": {
    "service_worker": "script.js",
    "type": "module"
  }
