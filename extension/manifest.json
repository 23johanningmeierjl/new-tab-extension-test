{
  "manifest_version": 3,

  "name": "My New Tab",
  "description": "Minimal, RAM-hogging, Time and Date in the New Tab",
  "action": {
    "default_icon": "icon.svg"
  },
  "icons": {
      "48": "icon.svg",
      "128": "icon.svg"
  },
  "version": "2.0",
  "chrome_url_overrides" : {
    "newtab": "index.html"
  },

  "permissions": [
    "storage"
  ],

  "background": {
    "service_worker": "script.js"
  }
}
